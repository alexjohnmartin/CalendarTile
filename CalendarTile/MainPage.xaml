                    </Button>
                </Grid>
            </phone:PanoramaItem>-->
        </phone:Panorama>

        <!-- Feedback overlay -->
        <ctrl:FeedbackOverlay x:Name="FeedbackOverlay"
                              Grid.RowSpan="2"
                              FeedbackTo="alexmartin9999@hotmail.com"
                              ApplicationName="Calendar Tile"
                              CompanyName="Nocturnal Tendencies" Margin="0,-2,0,2"/>

    </Grid>

</phone:PhoneApplicationPage>